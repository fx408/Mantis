{
	"background": {
    "persistent": false,
    "page": "pages/background.html"
  },
  
  "manifest_version": 2,
  "icons": { "128": "images/icon-128.png", "16": "images/icon-16.png" },
  "name": "Mantis",
  "description": "My Mantis, My BUG!",
  "version": "1.0",

  "permissions": [
  	"alarms",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "pages/index.html"
  }
}